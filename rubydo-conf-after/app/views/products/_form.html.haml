= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    .input-prepend
      %span.add-on COD
      = f.text_field :code, :class => 'span2'
  .field
    = f.label :name
    = f.text_field :name, :class => 'span4'
  .field
    = f.label :price
    .input-prepend
      %span.add-on $
      = f.text_field :price, :class => 'span2'

  .field
    = f.label :description
    = f.text_area :description, :class => 'span8'
  .actions
    = f.submit 'Save', :class => 'btn btn-info'
